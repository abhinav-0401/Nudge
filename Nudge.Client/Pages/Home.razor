@page "/"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<PageTitle>Nudge - A Simple API Manager</PageTitle>

<div class="container mt-4">
    <h2 class="mb-4">API Request Manager</h2>

    <!-- Create New Request Form -->
    <NewRequest />

    <!-- Requests List -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Saved Requests</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Method</th>
                            <th>URL</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><span class="badge bg-primary">GET</span></td>
                            <td>https://api.example.com/users</td>
                            <td>
                                <button class="btn btn-success btn-sm me-2">Execute</button>
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </td>
                        </tr>
                        <tr>
                            <td><span class="badge bg-success">POST</span></td>
                            <td>https://api.example.com/posts</td>
                            <td>
                                <button class="btn btn-success btn-sm me-2">Execute</button>
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </td>
                        </tr>
                        <tr>
                            <td><span class="badge bg-warning text-dark">PUT</span></td>
                            <td>https://api.example.com/users/1</td>
                            <td>
                                <button class="btn btn-success btn-sm me-2">Execute</button>
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>